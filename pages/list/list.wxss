/* pages/list/list.wxss */
.item-cell {
padding:10px 15px;
position:relative;
display:flex;
-webkit-box-align:center;
-webkit-align-items:flex-start;
align-items:flex-start;
margin: 5px 2px;
box-shadow: 0px 4px 9px #d9e0e4;
border-radius: 4px;
}

.item-cell__bd {
  padding: 5px 0;
  overflow: hidden;
  font-weight: bold;
  font-size: 16px;
}

.item-cell__ft {
  color: #ff0000;
  font-size: 14px;
  font-weight: normal;
  margin-top:20px; 
}
.item-cell-btn {
  margin-top: 20px;
  text-align: right;
}


