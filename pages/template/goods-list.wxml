<template name="item">
  <navigator url="htttp://www.baidu.com">
      <view class="item">
          <image src="{{item.mainImg}}"></image>
          <view class="item-title">
            <text>{{item.title}}</text>
          </view>
          <view>
            <text class="item-price">{{item.price}}</text>
          </view>
      </view>
  </navigator>
</template>

<template name="goods-list">
  <template is="item" data="{{item}}" wx:for="{{ hots }}" wx:key="id"/>
</template>