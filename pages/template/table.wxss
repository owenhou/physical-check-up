.table {
  border-top: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  max-height: 100px;
}
.td {
    width: 100%;
    text-align: left;
    line-height: 22px;
    justify-content: center;  
    display: flex;  
    flex-direction: column; 
    margin: 5px;
}
.td text{
    padding: 10px;
}
.bg-h{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 100%;
  justify-content: center;
  color: #000;
  display: flex;
  height: 35px;
  align-items: center;
}