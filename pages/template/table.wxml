<template name="table">
<view class="table">
  <view class="tr bg-h">
    <block wx:for="{{heads}}" wx:key="*this">
     <view class="th">{{item}}</view>
    </block>
  </view>
  <block wx:for="{{list}}" wx:key="id" wx:for-item="item">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <block wx:for="{{columns}}" wx:key="*this"  wx:for-item="col">
        <view class="td">{{item[col]}}</view>
      </block>
    </view>
    <view class="tr" wx:else>
      <block wx:for="{{columns}}" wx:key="*this"  wx:for-item="col">
        <view class="td">{{item[col]}}</view>
      </block>
    </view>
  </block>
</view>
</template>